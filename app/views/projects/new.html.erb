<h1>New Project</h1>

<%= form_for @project do |f| %>

<% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> 
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<table>
	
	<tr>
		<td><%= f.label :name %></td>
		<td><%= f.text_field :name %></td>
	</tr>

	<tr>
		<td><%= f.label :start_date %></td>
		<td><%= f.date_field :start_date %></td>
	</tr>

	<tr>
		<td><%= f.label :end_date %></td>
		<td><%= f.date_field :end_date %></td>
	</tr>

	<tr>
		<td></td>
		<td><%= f.submit %></td>
	</tr>

</table>

<% end %>

<br/><br/>
<%= link_to 'New Project', new_project_path %>  | <%= link_to 'All Projects', projects_path %>